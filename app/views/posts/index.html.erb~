<h1>Listing posts</h1>
<center>
<br/>
<br/>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Comments</th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
<% if post.comments.count != 0 %>
	<td><%= link_to 'Show comments', post_comments_path(:post_id => post.id, :post => post, :method => :get) %></td>
<% else %>
	<td><%=link_to 'Add comments', new_post_comment_path(:post_id => post.id) %></td>
<% end %>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</center>

